{
  "name": "growlerapp",
  "version": "3.0.23",
  "description": "App for search your near growler",
  "main": "src",
  "scripts": {
    "start": "node src",
    "dev": "nodemon --inspect=0.0.0.0:9229 src",
    "dev:docker": "nodemon --inspect=0.0.0.0:9229 src",
    "initdb": "node src/initdb",
    "lint": "eslint .",
    "format": "prettier-standard 'src/**/*.js' 'test/**/*.js'",
    "test": "MONGODB_URI=mongodb://localhost/growler_test nyc mocha",
    "ts-compile-check": "tsc -p tsconfig.json --noEmit"
  },
  "engines": {
    "node": "12.4.0"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/growlerapp/api.git"
  },
  "keywords": [
    "growler",
    "graphql"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/growlerapp/api/issues"
  },
  "homepage": "https://github.com/growlerapp/api#readme",
  "dependencies": {
    "@godaddy/terminus": "4.1.2",
    "@google/maps": "0.5.5",
    "@sentry/node": "5.4.3",
    "apollo-server-express": "2.6.7",
    "body-parser": "1.19.0",
    "cors": "2.8.5",
    "dotenv": "8.0.0",
    "express": "4.17.1",
    "graphql": "14.4.0",
    "graphql-geojson": "1.0.0",
    "helmet": "3.18.0",
    "mongoose": "5.6.1",
    "morgan": "1.9.1",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "8.0.0",
    "@commitlint/config-conventional": "8.0.0",
    "@semantic-release/changelog": "3.0.4",
    "@semantic-release/commit-analyzer": "6.2.0",
    "@semantic-release/exec": "3.3.5",
    "@semantic-release/git": "7.0.14",
    "@semantic-release/github": "5.4.0",
    "@semantic-release/npm": "5.1.13",
    "@semantic-release/release-notes-generator": "7.2.1",
    "@types/body-parser": "1.17.0",
    "@types/cors": "2.8.5",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.0",
    "@types/google__maps": "0.5.5",
    "@types/graphql": "14.2.2",
    "@types/helmet": "0.0.43",
    "@types/mongoose": "5.5.6",
    "@types/morgan": "1.7.35",
    "@types/node": "12.0.4",
    "chai": "4.2.0",
    "eslint": "6.0.1",
    "eslint-config-jsdoc-strict": "2.0.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.18.0",
    "eslint-plugin-jsdoc": "8.7.0",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-standard": "4.0.0",
    "husky": "2.6.0",
    "lint-staged": "8.2.1",
    "mocha": "6.1.4",
    "nodemon": "1.19.1",
    "nyc": "14.1.1",
    "nyc-config-common": "1.0.1",
    "prettier-standard": "9.1.1",
    "semantic-release": "15.13.18",
    "supertest": "4.0.2",
    "typescript": "3.5.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "standard",
      "jsdoc-strict",
      "plugin:promise/recommended",
      "plugin:security/recommended"
    ],
    "plugins": [
      "promise",
      "security"
    ],
    "rules": {
      "no-console": "error",
      "require-await": "error"
    }
  },
  "eslintIgnore": [
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "{src,test}/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "automerge": "minor",
    "extends": [
      "config:js-app"
    ]
  },
  "mocha": {
    "exit": true
  },
  "nyc": {
    "extends": "nyc-config-common"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "verifyConditionsCmd": "bash .travis/heroku.container-release-verify.sh",
          "publishCmd": "bash .travis/heroku.container-release-publish.sh"
        }
      ]
    ]
  }
}
